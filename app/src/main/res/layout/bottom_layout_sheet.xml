<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewCardHelpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:text="Card Number"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewCardHelpDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="sdfsdfsdasdasdasdasdasdasdasdasdasd"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageViewCardLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/card_date" />

    <Button
        android:id="@+id/Button_close_help"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:text="OK"
        app:cornerRadius="10dp" />

</LinearLayout>